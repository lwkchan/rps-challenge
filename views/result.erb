<h2>Computer chose <%= @game.pc_weapon %></h2>
<h2>You chose <%= @game.player_weapon %></h2>

<% if @game.player_win? == true %>
<h1><%= @game.player.name %> wins this game</h1>
<% elsif @game.player_win? == false %>
<h1>Computer wins this game</h1>
<% elsif @game.player_win? == nil %>
<h1>It's a draw</h1>
<% end %>

<form class="" action="/reset" method="post">
  <button type="submit">Play again</button>
</form>
